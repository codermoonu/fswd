<div class="container" id="register">
    <div class="login-box">
        <h2 class="text-center mb-4">Register</h2>
        <form method="POST" action="/register">
            <div class="mb-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" name="username" placeholder="Enter your name" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Email Address</label>
                <input type="email" class="form-control" name="email" placeholder="Enter your email" required>
            </div>
            <div class="mb-3">
                <label class="form-label">Event You Are Interested In</label>
                <select class="form-select" name="event">
                    <option selected>Choose an Event</option>
                    <option value="1">ROBOTICS</option>
                    <option value="2">GAMING</option>
                    <option value="3">TECH</option>
                    <option value="4">MECHANICAL</option>
                    <option value="5">CIVIL</option>
                    <option value="6">NON-TECH</option>
                </select>
            </div>
            <div class="mb-4">
                <label class="form-label">Registration Number</label>
                <input type="text" class="form-control" name="regno" placeholder="Enter your registration number">
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-custom w-100">SIGNUP</button>
            </div>
        </form>
        <div class="text-center mt-3">
            <a href="#">Forgot Password?</a> | <a href="#">Create your account</a>
        </div>
    </div>
</div>

